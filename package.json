{
  "name": "textmage",
  "version": "1.1.0",
  "description": "Universal AI Assistant with T9 Autocomplete",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": "Legalize86",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.3.11",
    "electron-builder": "^24.6.2"
  },
  "dependencies": {},
  "build": {
    "appId": "com.legalize86.textmage",
    "productName": "TextMage",
    "directories": { "output": "dist" },
    "files": [
      "main.js",
      "preload.js",
      "words.js",
      "t9.js",
      "t9.css",
      "about.html",
      "assets/**/*"
    ],
    "linux": {
      "target": ["AppImage"],
      "icon": "assets/icon.png",
      "category": "Network;Internet",
      "desktop": { "StartupWMClass": "TextMage" }
    },
    "afterAllArtifactBuild": "scripts/postbuild.js"
  }
}

